
@{
    ViewBag.Title = "adminLogin";
}


<div class="container">
    <div class="row">
        <center> <b> <h1 class="text-info">Admin Login</h1> </b></center>
        <div class="col-md-12">
            <form method="post" action="authenticateUser">
                <div class="form-group-lg">
                    <label>Admin Id</label>
                    <input type="text" id="adminID" name="adminID" class="form-control" />
                </div>

                <div class="form-group-lg">
                    <label>Admin Password</label>
                    <input type="password" id="adminPassword" name="adminPassword" class="form-control" />
                </div>


                <input type="submit" value="Login" class="btn btn-primary" />

            </form>

        </div>

    </div>

</div>
